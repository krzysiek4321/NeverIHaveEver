<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NeverIHaveEver.RightPage" BackgroundColor="Black">
    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness"
                    iOS="0, 20, 0, 0"/>
    </ContentPage.Padding>
    <AbsoluteLayout>
        <Label 
            Text="Let's play!"
            FontSize="23"
            TextColor="White"
            AbsoluteLayout.LayoutBounds="0.5, 0.35, 0.5, 50"
            AbsoluteLayout.LayoutFlags="PositionProportional, WidthProportional"
            HorizontalOptions="Center"/>
        <Button 
            Text="Next"
            FontSize="16"
            BackgroundColor="Black"
            TextColor="White"
            AbsoluteLayout.LayoutBounds="0.5, 0.79, 0.5, 50"
            AbsoluteLayout.LayoutFlags="PositionProportional, WidthProportional"
            HorizontalOptions="Center"/>
    </AbsoluteLayout>
</ContentPage>