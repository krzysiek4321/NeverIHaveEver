<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NeverIHaveEver.RulesPage"
             BackgroundColor="Black">
    <AbsoluteLayout>
        <StackLayout
            AbsoluteLayout.LayoutBounds="0, 0.3, 1, 0.5"
            AbsoluteLayout.LayoutFlags="All"
            Padding="20">
            <Label TextColor="White" FontSize="Large" Text="Step 1. Everyone should take a beer." />
            <Label TextColor="White" FontSize="Large" Text="Step 2. Choosen player or one after the other reads 'Never I have ever...'." />
            <Label TextColor="White" FontSize="Large" Text="Step 3. Players who HAVE DONE fallowing statment take a gulp." />
            <Label TextColor="White" FontSize="Large" Text="Step 4. Come back to step 2." />
            <Label TextColor="White" FontSize="Large" Text="Have a fun!" 
                   HorizontalTextAlignment="Center" Margin="40" />
        </StackLayout>
        <Button 
                AbsoluteLayout.LayoutBounds="0, 0.9, 1, 50" 
                AbsoluteLayout.LayoutFlags="PositionProportional, WidthProportional"
                HorizontalOptions="Center"
                Text="Return"
                TextColor="White"
                BackgroundColor="#151515"
                Clicked="Button_Clicked"/>
    </AbsoluteLayout>
</ContentPage>